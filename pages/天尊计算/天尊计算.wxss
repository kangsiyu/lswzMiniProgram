/* pages/天尊计算/天尊计算.wxss */
.main{
  width: 100%;
  height: 100%;
}
.swiper-tab{
  height: 10vh;
  display: flex;
  line-height: 7vh;
  margin-bottom: 10px;
}
.swiper-tab-list{  
  font-size: 16px;
  display: inline-block;
  width: 25%;
  color: #777777;
  text-align: center;
  margin-bottom: 10px;
}
.on{ 
  color: #fc6060;
  border-bottom: 3rpx solid #fc6060;
  padding-bottom:1vh;
}
 
.swiper-box{ 
  display: block; 
  height: 80vh; 
  width: 100%; 
  overflow: scroll; 
}
.swiper-box view{
  text-align: center;
}
.buttonContainer{
  height: 60px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.button{
  display: block;
  width: 40%;
  background-color: #fc6060;
  border-radius: 20px;
  margin-top: 10px;
  height: 40px;
  color: white;
  line-height: 40px;
  text-align: center;
}
.mainContainer{
  height: 190px;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.starTitleContainer{
  width: 100%;
  text-align: center;
}
.title{
  text-align: center;
  line-height: 30px;
}
.starContainer{
  height: 160px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.starUnit{
  width: 20%;
  height: 80px;
}
.starUnitChuanShuo{
  width: 20%;
  height: 80px;
}
.starUnitTitleContainer{
  width: 100%;
  height: 40px;
  text-align: center;
  background-color: #f0f0f0;
}
.starUnitTitle{
  line-height: 40px;
}
.inputContainer{
  width: 100%;
  height: 40px;
  text-align: center;
  border: 1px solid #f0f0f0;
  justify-items: center;
  align-items: center;
}
.input{
  line-height: 40px;
  height: 40px;
}
.tab_container {
  width: 100%;
  height: 1160px;
  display: flex;
  flex-direction: column;
}