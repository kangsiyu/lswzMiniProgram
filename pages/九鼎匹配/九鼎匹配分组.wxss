/* pages/九鼎匹配/九鼎匹配分组.wxss */
page{
  width: 100%;
  height: 100%;
}
.tab_container {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.teamContainer{
  text-align: center;
}
.jixianCheckBoxOrigin{
  height: 200px;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.smallTeamCheckBox{
  height: 35px;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding-bottom: 10px;
}
.jixianCheckOrigin{
  height: 25px;
  width: 30%;
  margin-right: 1%;
  margin-top: 4px;
  margin-left: 1%;
  text-align: center;
  background-color: #f0f0f0;
  border: 1px solid #f0f0f0;
  
}
.bingName{
  font-size: 15px;
}
.selectedCheck{
  border: 1px solid #fc6060;
  color: #fc6060;
}
.zhanduiContainer{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
}
.zhanduiListContainer{
  width: 100%;
  padding-bottom: 150px;

}
.zhanduiTitle{
  width: 20%;
  line-height: 30px;
  text-align: center;
  border: solid 1px #f0f0f0;
  font-size: 12px;
}
.zhanduiName{
  width: 40%;
  line-height: 30px;
  text-align: center;
  border: solid 1px #f0f0f0;
  font-size: 12px;
}
.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}


.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  width: 70%;
  margin-left: 15%;
  margin-top: 20%;
}
.bottomAd{
  width: 100%;
  bottom: 0rpx;
  height: constant(safe-area-inset-bottom);
  position: fixed;
}

.toast-title {
  padding-left: 5%;
  background-color: #fc6060;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 5%;
  border: 1px solid #ddd;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 10px;
  padding-bottom: 5px;
}

.toast-button {
  display: flex;
  flex-direction: row;
}

.button1 {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.button2 {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}