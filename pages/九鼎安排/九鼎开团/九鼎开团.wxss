/* pages/九鼎安排/九鼎开团/九鼎开团.wxss */
page {
  height: 100%;
}
.scroll{
  width: 100%;
  height: 100%;
  display: flex;
}
.area_less{
  width: 540px;
  height: 406px;
}
.background{
  width: 540px;
  height: 326px;
}
.teamPersonTitle{
  width: 540px;
  height: 30px;
  display: flex;
  flex-direction: row;
}
.teamPersonTitleText{
  margin-left: 20px;
  line-height: 30px;
  width: 50%;
}
.applyInfo{
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.applyText{
  color: #3399ff;
  line-height: 30px;
  text-align: right;
  width: 100%;
  margin-right: 20px;
}
.teamPersonScroll{
  width: 100%;
  height: 40px;
  background-color: aqua;
  display: flex;
  flex-direction: row;
}
.teamPersonContainer{
  width: 60px;
  height: 40px;
  background-color: rebeccapurple;
}

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}


.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 100%;
  margin-top: 50%;
  display: flex;
  flex-direction: column;
}

.toast-title {
  padding-left: 5%;
  background-color: #fc6060;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  background-color: aqua;
  text-align: center;
  width: 100%;
  height: 40%;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 5%;
  border: 1px solid #ddd;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 10px;
  padding-bottom: 5px;
}

.applyList{
  width: 100%;
  padding-bottom: 40px;
  display: flex;
  flex-direction: row;
}
.applyerName{
  margin-left: 20px;
  width: 20%;
  text-align: center;
  background-color: yellow;
}

.button1 {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  height: constant(safe-area-inset-bottom);
}

.button1 button {
  background-color: white;
  color: black;
}     