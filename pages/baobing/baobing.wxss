.weui-cells__title{
  padding-top: 40rpx;
  margin-left: 20rpx;
}
.weui-input{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  height: 40px;
  border: 1rpx solid black;
  border-radius: 20px;
  padding-left: 20rpx;
}
page{
  height: 100%;
}
.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.calculate{
  height: 40px;
  border: 1rpx solid white;
  background-color: #fc6060;
  width: 100%;
  color: white;
  position: fixed;
  bottom: 0rpx;
  height: constant(safe-area-inset-bottom);
}
.result{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.inputContainer{
  height: 50px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid gainsboro;
}
.titleContainer{
  width: 33%;
  text-align: center;
  background-color:#f0f0f0;
  align-items: center;
  justify-items: center;
}
.title{
  display: block;
  line-height: 50px;
  text-align: center;
  font-size: 13px;
}
.unitTitle{
  width: 11%;
  text-align: center;
  background-color:#f0f0f0;
  align-items: center;
  justify-items: center;
}
.input{
  padding-left: 20px;
}
.unitInput{
  padding-left: 1.3%;
  width: 10%;
  text-align: center;
}