/* pages/大厅评级计算/大厅.wxss */
/* pages/三围对齐/三围对齐.wxss */
page {
  height: 100%;
}

.tab_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}
.inputContainer{
  height: 50px;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid gainsboro;
}
.bingzhongContainer{
  height: 110px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid gainsboro;
}
.titleContainer{
  width: 33%;
  text-align: center;
  background-color:#f0f0f0;
  align-items: center;
  justify-items: center;
}
.title{
  display: block;
  line-height: 50px;
  text-align: center;
}
.titleBingzhong{
  display: block;
  line-height: 110px;
  text-align: center;
}
.input{
  padding-left: 20px;
}
.unitTitle{
  width: 11%;
  text-align: center;
  background-color:#f0f0f0;
  align-items: center;
  justify-items: center;
}
.unitInput{
  width: 11.3%;
  text-align: center;
  font-size: medium;
}
.calculate{
  height: 40px;
  border: 1rpx solid white;
  background-color: #fc6060;
  width: 100%;
  color: white;
  position: fixed;
  bottom: 0rpx;
  height: constant(safe-area-inset-bottom);
}
.result{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 5px;
  margin-bottom: 2px;
  font-size: 15px;
}
.jixianContainerOrigin{
  text-align: left;
  padding-left: 5%;
  height: 30px;
  width: 67%;
}  
.jixianCheckBoxOrigin{
  height: 110px;
  display: flex;
  flex-wrap: wrap;
  width: 67%;
} 
.jixianCheckOrigin{
  height: 25px;
  width: 30%;
  margin-right: 1%;
  margin-top: 4px;
  margin-left: 1%;
  text-align: center;
  background-color: #f0f0f0;
  border: 1px solid #f0f0f0;
  
}
.bingName{
  font-size: 15px;
}
.selectedCheck{
  border: 1px solid #fc6060;
  color: #fc6060;
}
.activeButtonContainer{
  height: 40px;
  width: 100%;
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.pkButtonContainer{
  height: 40px;
  border: 1rpx solid white;
  background-color: #fc6060;
  width: 45%;
  color: white;
  border-radius: 20px;
}
.shareButtonContainer{
  height: 40px;
  border: 1rpx solid white;
  background-color: #fc6060;
  width: 45%;
  color: white;
  border-radius: 20px;
}
.activeTitle{
  text-align: center;
  line-height: 40px;
  width: 100%;
  display: block;
}
.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}


.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  width: 70%;
  margin-left: 15%;
  margin-top: 15%;
}

.toast-title {
  padding-left: 5%;
  background-color: #fc6060;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 5%;
  border: 1px solid #ddd;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 10px;
  padding-bottom: 5px;
}

.toast-button {
  display: flex;
  flex-direction: row;
}

.button1 {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.button2 {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.button1 button {
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}

.button2 button{
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
} 
.jixianContainer{
  text-align: left;
  padding-left: 5%;
  height: 30px;
}  
.jixianCheckBox{
  padding-left: 5%;
  padding-right: 5%;
  padding-bottom: 2%;
  height: 90px;
  display: flex;
  flex-wrap: wrap;
} 
.jixianCheck{
  height: 20px;
  width: 60px;
  margin-right: 5px;
  margin-top: 5px;
  margin-left: 5px;
  text-align: center;
  background-color: #f0f0f0;
  border: 1px solid #f0f0f0;
}
.pkContainer{
  padding-left: 1%;
  padding-right: 1%;
  height: 30px;
  display: flex;
  flex-direction: row;
  border: 1px solid #f0f0f0;
  text-align: center;
  justify-content: center;
  align-items: center;
} 
.pkUnitInput{
  width: 30%;
  line-height: 30px;
}
.intro{
  height: 20px;
  width: 50%;
  margin: 3px;
}
.introText{
  line-height: 20px;
  color: #fc6060;
  margin-left: 20rpx;
}
.introCard{
  margin-left: 5px;
  margin-right: 5px;
  text-align: left;
}