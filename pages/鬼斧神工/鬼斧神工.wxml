
<view class='tab_container'>
  <view class="inputContainer">
      <view class="titleContainer">
      <text class="title">特级炼钢数量</text>
      </view>
      <input class="input" placeholder="输入特级炼钢数量" auto-focus type="number" bindinput="orangeIronInput"></input>
  </view>
  <view class="inputContainer">
      <view class="titleContainer">
        <text class="title">紫色炼钢数量</text>
      </view>
      <input class="input" placeholder="输入紫色炼钢数量" type="number" bindinput="purpleIronInput"></input>
  </view>
  <view class="inputContainer">
      <view class="titleContainer">
        <text class="title">蓝色炼钢数量</text>
      </view>
      <input class="input" placeholder="输入蓝色炼钢数量" type="number" bindinput="blueIronInput"></input>
  </view>
  <view class="inputContainer">
      <view class="titleContainer">
        <text class="title">绿色炼钢数量</text>
      </view>
      <input class="input" placeholder="输入绿色炼钢数量" type="number" bindinput="greenIronInput">0</input>
  </view>
  <text class="result">{{resultStr}}</text>
  <button class="calculate" bindtap="calculateAction" style="width:100%">计算</button>
</view>