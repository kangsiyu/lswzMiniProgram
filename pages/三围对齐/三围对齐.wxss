/* pages/三围对齐/三围对齐.wxss */
page {
  height: 100%;
}

.tab_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}
.inputContainer{
  height: 50px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid gainsboro;
}
.bingzhongContainer{
  height: 120px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid gainsboro;
}
.titleContainer{
  width: 33%;
  text-align: center;
  background-color:#f0f0f0;
  align-items: center;
  justify-items: center;
}
.title{
  display: block;
  line-height: 50px;
  text-align: center;
}
.titleBingzhong{
  display: block;
  line-height: 120px;
  text-align: center;
}
.input{
  padding-left: 20px;
}
.unitTitle{
  width: 11%;
  text-align: center;
  background-color:#f0f0f0;
  align-items: center;
  justify-items: center;
}
.unitInput{
  padding-left: 1.3%;
  width: 10%;
  text-align: center;
}
.calculate{
  height: 40px;
  border: 1rpx solid white;
  background-color: #fc6060;
  width: 100%;
  color: white;
  position: fixed;
  bottom: 0rpx;
  height: constant(safe-area-inset-bottom);
}
.result{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 60px;
}
.jixianContainer{
  text-align: left;
  padding-left: 5%;
  height: 30px;
  width: 67%;
}  
.jixianCheckBox{
  height: 120px;
  display: flex;
  flex-wrap: wrap;
  width: 67%;
} 
.jixianCheck{
  height: 25px;
  width: 28%;
  margin-right: 1%;
  margin-top: 3%;
  margin-left: 1%;
  text-align: center;
  background-color: #f0f0f0;
  border: 1px solid #f0f0f0;
  
}
.bingName{
  font-size: 15px;
}
.selectedCheck{
  border: 1px solid #fc6060;
  color: #fc6060;
}