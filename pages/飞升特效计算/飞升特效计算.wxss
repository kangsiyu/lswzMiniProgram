page{
  width: 100%;
  height: 100%;
}
.tab_container {
  width: 100%;
  height: 1160px;
  display: flex;
  flex-direction: column;
}
.mainContainer{
  height: 190px;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.starTitleContainer{
  width: 100%;
  text-align: center;
}
.title{
  text-align: center;
  line-height: 30px;
}
.starContainer{
  height: 160px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.starUnit{
  width: 20%;
  height: 80px;
}
.starUnitChuanShuo{
  width: 20%;
  height: 80px;
}
.starUnitTitleContainer{
  width: 100%;
  height: 40px;
  text-align: center;
  background-color: #f0f0f0;
}
.starUnitTitle{
  line-height: 40px;
}
.inputContainer{
  width: 100%;
  height: 40px;
  text-align: center;
  border: 1px solid #f0f0f0;
  justify-items: center;
  align-items: center;
}
.input{
  line-height: 40px;
  height: 40px;
}
.buttonContainer{
  height: 60px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
}
.button{
  display: block;
  width: 50%;
  margin-left: 25%;
  background-color: #fc6060;
  border-radius: 20px;
  margin-top: 10px;
  height: 40px;
  color: white;
  line-height: 40px;
  text-align: center;
}
.result{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
